{
	"name": "magento-toolbox",
	"displayName": "Magento Toolbox",
	"description": "Tools for working with Magento 2",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:magento-toolbox.generateModule"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "magento-toolbox.generateModule",
				"title": "Magento Toolbox: Generate Module"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/react": "^17.0.37",
		"@types/react-dom": "^17.0.11",
		"@types/vscode": "^1.63.0",
		"@types/xml2js": "^0.4.9",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"css-loader": "^6.5.1",
		"eslint": "^8.1.0",
		"eslint-config-airbnb": "^19.0.2",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"prettier": "^2.5.1",
		"sass": "^1.45.1",
		"sass-loader": "^12.4.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"ejs": "^3.1.6",
		"informed": "^4.0.17",
		"preact": "^10.6.4",
		"react": "npm:@preact/compat",
		"react-dom": "npm:@preact/compat",
		"xml2js": "^0.4.23"
	}
}
